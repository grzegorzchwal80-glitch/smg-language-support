{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SMG",
	"scopeName": "source.smg",
  
	"patterns": [
	  { "include": "#keywords" },
	  { "include": "#registers" },
	  { "include": "#numbers" },
	  { "include": "#strings" },
	  { "include": "#comment" }
	],
  
	"repository": {
	  "keywords": {
		"patterns": [
		  {
			"name": "keyword.control.smg",
			"match": "\\b(divide|minus|plus|set|Times|glb|stop|wait|go|goiflseql|goeq|gogreq|gogr|include|compare|call)\\b"
		  }
		]
	  },
  
	  "registers": {
		"patterns": [
		  {
			"name": "variable.language.register.smg",
			"match": "\\b(rax|rbx|rcx|rdx|rsi|rdi|rsp|rbp|r8|r9|r10|r11|r12|r13|r14|r15)\\b"
		  }
		]
	  },
  
	  "numbers": {
		"patterns": [
		  {
			"name": "constant.numeric.smg",
			"match": "\\b\\d+\\b"
		  }
		]
	  },
  
	  "strings": {
		"name": "string.quoted.double.smg",
		"begin": "\"",
		"end": "\"",
		"patterns": [
		  {
			"name": "constant.character.escape.smg",
			"match": "\\\\."
		  }
		]
	  },
  
	  "comment": {
		"patterns": [
		  {
			"name": "comment.line.double-dash.smg",
			"match": "--.*$"
		  }
		]
	  }
	}
  }